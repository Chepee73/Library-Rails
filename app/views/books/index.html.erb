<p id="notice"><%= notice %></p>
<body>	
	<h1> List of Books </h1>
	<% @books.each do |book| %>  
	
		<div class="book-details">
		 
		  <h2 class="book-title"><%= book.title %> </h2> 
		 
		  <h3 class="book-author"><%=link_to book.author.name, author_path(book.author) %></h3>
		 
		  <div class="book-image"></div>
		 
		  <p class="book-description"> <%= book.description %> </p>
		  <ul>
		    <li class="book-mod"><%= link_to 'Show', book %></li>
		    <li class="book-mod"><%= link_to 'Edit', edit_book_path(book) %></li>
		    <li class="book-mod"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></li>
		  </ul>
		</div>
	<% end %>
</body>